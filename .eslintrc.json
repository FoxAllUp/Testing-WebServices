{
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
  "plugins": ["mocha", "node"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    "mocha/no-exclusive-tests": "error",
    "mocha/no-skipped-tests": "warn",
    "node/no-unpublished-require": "off",
    "node/no-missing-require": "error"
  },
  "ignorePatterns": ["node_modules/", "reports/", "*.html", "*.xml"]
}
